@*@model StoreCore.Data.ApplicationUserRole*@
@model StoreCore.ViewModels.UserRolesViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>Deletar</h1>
<h3>Tem certeza de que deseja excluir esta função do usuário</h3>
<h4>@Html.DisplayFor(model => model.UserName)</h4>
 <hr />
<div>   
    <dl class="row">
        <dt class="col-sm-2">
            @Html.LabelForModel("Usuário")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.LabelForModel("Papel")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="RoleId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>
