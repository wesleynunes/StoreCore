<!DOCTYPE html>
<html lang="pt-br">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/simple-sidebar.css" />
    <link rel="stylesheet" href="~/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>

<body id="page-top">      

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-white border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">
                <a class="list-group-item-action text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-store"></i> StoreCore
                </a>
            </div>

            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action bg-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-tachometer-alt"></i> Painel
                </a>
            </div>

            <div class="dropdown list-group list-group-flush">
                <div class="nav navbar-nav side-nav">
                    <div>
                        <a href="#" class="list-group-item list-group-item-action bg-white dropdown-toggle" data-toggle="collapse" data-target="#submenu">
                            Adminstração
                        </a>
                        <div id="submenu" class="collapse margin-left-40 list-style-type-none">
                            <a asp-area="" asp-controller="Users" asp-action="Index" class="list-group-item list-group-item-action bg-white">  Usuarios</a>
                            <a asp-area="" asp-controller="Roles" asp-action="Index" class="list-group-item list-group-item-action bg-white">  Grupos</a>
                            <a asp-area="" asp-controller="userRoles" asp-action="Index" class="list-group-item list-group-item-action bg-white">  papéis</a>
                            <a asp-area="" asp-controller="userClaims" asp-action="Index" class="list-group-item list-group-item-action bg-white">  Reivindicações</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="list-group list-group-flush">
                <a href="#" class="list-group-item list-group-item-action bg-white">Registros</a>
                <a href="#" class="list-group-item list-group-item-action bg-white">Overview</a>
                <a href="#" class="list-group-item list-group-item-action bg-white">Events</a>
                <a href="#" class="list-group-item list-group-item-action bg-white">Profile</a>
                <a href="#" class="list-group-item list-group-item-action bg-white">Status</a>
            </div>

        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-4">
                <button class="btn btn-outline-primary btn-sm" id="menu-toggle">
                    <i class="fas fa-ellipsis-h"></i>
                </button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link text-dark" href="#">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">Link</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @User.Identity.Name!
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Conta</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <div class="dropdown-divider"></div>
                                <div>
                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button type="submit" class="dropdown-item">Sair</button>
                                    </form>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid scroll">
                <partial name="_CookieConsentPartial" />
                <div class="mb-5">
                    @RenderBody()
                </div>
            </div>

            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2019 - StoreCore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
        <!-- /#page-content-wrapper -->

   

    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/all.min.js"></script>
    <script src="~/js/fontawesome.min.js"></script>
    @*<script src="~/js/jquery.validate.min.js"></script>*@
    @*<script src="~/js/jquery.validate.unobtrusive.min.js"></script>*@

    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>

</html>

