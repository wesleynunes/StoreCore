@model StoreCore.Data.ApplicationUserClaim

@{
    ViewData["Title"] = "Delete reivindicações";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>Deletar</h1>
<h3>Tem certeza de que deseja excluir esta reivindicação</h3>
<h4>@Html.DisplayFor(model => model.ClaimType)</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.LabelForModel("Tipo de reivindicação")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClaimType)
        </dd>
        <dt class="col-sm-2">
            @Html.LabelForModel("Valor da reividicação")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClaimValue)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>
