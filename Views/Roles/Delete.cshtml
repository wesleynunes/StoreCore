@model StoreCore.Data.ApplicationRole

@{
    ViewData["Title"] = "Deletar grupo ";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>Deletar</h1>

<h3>Tem certeza de que deseja excluir este grupo</h3>
<h4>@Html.DisplayFor(model => model.Name)</h4>

<hr />

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active"><a asp-action="index">Voltar</a></li>
        <li class="breadcrumb-item"><a asp-action="index" asp-controller="Admin">Painel</a></li>
    </ol>
</nav>

<div>  
    <dl class="row">
        <dt class="col-sm-2">
            @Html.LabelForModel("Nome")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.LabelForModel("Nome normalizado")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NormalizedName)
        </dd>       
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>
